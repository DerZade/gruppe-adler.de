{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es2016",
        "sourceMap": true,
        "outDir": "./build",
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}